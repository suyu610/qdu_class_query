/* pages/class.wxss */
.container{
  width: 100vw;
  perspective-origin: 10px 10px; /*å¢ž*/
  perspective: 500px;
  background-color: #fff;
  height: 100vh;
}
#arrow-down-btn{
  position: fixed;
  right: 40px;
  top: 22px;
}
.title{
  width: 34vw;
  margin-left: 33vw;
  height: 13px;  
  position: absolute;
  margin-top: 3.4vh;
  text-align: center;
  background-color: #fde06b;
  border-radius: 3px;
}
.table-title{
  padding-top: 5vh;
  text-align: center;
}
.table {
  padding: 2vw;  
  border: 0px solid darkgray;
  font-size: 14px;
  border-radius: 12px;
 }

 .tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 4.4rem;
  align-items: center;
  font-size: 12px;
  background-color: #fee276;
 }


 .tr:first-child{
  height: 3rem;
  font-size: 22rpx;
 }

 .bg-w:first-child{
  background: transparent;
 }
 .bg-g{
  background: #e6f3f936;
 }
 .th {    
  width: 110rpx;
  justify-content: center;
  background: #fde06b;
  color: #000;
  display: flex;
  height: 3rem;
  align-items: center;
 }
 .th:first-child{
   border-top-left-radius: 12px;
 }
 .th:last-child{
  border-top-right-radius: 12px;
 }
 .loading-wrapper{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
 }

 /* pages/schedule/schedule.wxss */

@import '../../iconfont/iconfont.wxss';

.nav-head {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 40px;
  border-bottom: 1rpx solid #cacbcc55;
  background-color: transparent;
}
.van-collapse-item__title{
  height: 1;
}
.week-selector {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 330rpx;
}



.tab-scroll {
  z-index: 10;
  position: fixed;
  border-top: 1rpx solid #cacbcc55;
  background-color: transparent;
}

.tab-container {
  /* height:600px; */
  width:750rpx;
  display:flex;
  position: absolute;
  
}



.tab-section {
  width: 12.5%;
  background-color: transparent;  
  color:#18191A;
}

.tab-section-divide {
  width: 53rpx;
  height: 200px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;  
  box-sizing: border-box;
}

.tab-section-item {
  width: 100%;
  height: 53px;
  font-size: 22rpx;
  justify-content: center;
  display: flex;
  align-items: center;
  background-color: transparent;
}

.course-item {
  padding: 5px;
  position: absolute;
  width: 99rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24px;
}
.course-item-notself{  
  color:#000000cc;
  font-weight: normal;  
  background-color: #f4f4f5;
}
.unknow{
  background-color: #fdd8d8!important;
  width: 90%;
  height: 99%!important;
  color: white!important;
}

/* .unknow>text{
  color: white!important;
} */

.course-item-inner {
  border-radius: 5px;
  font-size: 34rpx;
  color: #fff;
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;  
  text-overflow: ellipsis;
  padding: 0.5vw;
  padding: 5px;
}
.course-item-inner text{
  text-align: center;
  align-self: center;
  font-size:11px;
  color:black;
}

