page {
  background-color: #ffffff;
}

.container {
  width: 100%;
  margin-bottom: 10rpx;
}

.header {
  width: 100%;
  height: 300rpx;
  border-radius: 20%;
  background-color: transparent;
  margin-top: -100rpx;
  position: relative;
}

.header .group {
  width: 100%;
  position: absolute;
  bottom: -200rpx;
  text-align: center;
}

.header image {
  width: 196rpx;
  border-radius: 50%;
  height: 196rpx;  
}

.header .name {
  width: 100%;
  display: inline-block;
  margin-top: 30rpx;
  color: #4e5b65;
}

.line {
  display: block;
  width: 600rpx;
  margin: 0 auto;
  height: 1px;
  background-color: #dddddd;
  margin-top: 250rpx;
  margin-bottom: 50rpx;
}

.price-list {
  padding: 10rpx 15rpx;
  text-align: center;
  flex-direction: row;
}

.price-list .item {
  float: left;
  padding: 10rpx;  
  width: 220rpx;
  line-height: 80rpx;
  height: 80rpx;
}

.price-list .price-box {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 20rpx;
  border: 1px solid black;
  text-align: center;
}

.price-list .price-box em {
  line-height: 80rpx;
  color: black;
  font-size: 20rpx;
}

.price-list .price-box .price {
  font-size: 40rpx;
  display: inline-block;
}

.price-list .price-box.active {
  background-color: #d55a4a;
}

.price-list .price-box.active em {
  color: #fff;
  background-color: #d55a4a;
}
