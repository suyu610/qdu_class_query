/* pages/schedule/schedule.wxss */
page {
  background-color: #fff;
}
@import "../../iconfont/iconfont.wxss";
.opacity {
  opacity: 0;
}

.nav-head {
  padding-top: 22px;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100vw;
  justify-content: space-between;
  /* height: 40px; */
  padding: 10px;
  padding-top: 25px;
  border-bottom: 1rpx solid #cacbcc55;
  background-color: #ffffff11;
}
.van-collapse-item__title {
  height: 1;
}
.week-selector {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 260rpx;
}

.cur-week {
  text-align: center;
  line-height: 1.5;
}

.cur-week image {
  text-align: center;
  display: block;
  height: 20px;
  width: 20px;
  position: relative;
  text-align: center;
  margin: 0 auto;
  margin-bottom: 0rpx;
  z-index: 9;
}

.cur-week .week {
  font-size: 24rpx;
  color: #18191a;
}

.cur-week .title {
  font-size: 20rpx;
  color: #7a7d80af;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
}

.share-btn {
  width: 45px;
  text-align: center;
  height: 52rpx;
  font-size: 20rpx;
  color: grey;
}

.setting-btn {
  width: 25px;
  text-align: center;
  height: 52rpx;
  font-size: 20rpx;
  color: grey;
}

.img-button {
  text-align: center;
  width: 44rpx;
  height: 50rpx;
}
.img-button image {
  width: 35% !important;
  height: 35% !important;
}

.tab-top {
  /* background-color: #ffffff11; */
  width: 100vw;

  display: flex;
  flex-direction: row;
  align-items: center;
  height: 50px;
}
.cu-progress {
  display: block;
  background-color: transparent !important;
}
.bg-orange {
  background-color: var(--themeColor);
  color: var(--titleColor) !important;
  text-align: left;
}

.closeCountDownBtn {
  position: fixed;
  bottom: 10px;
  background-color: #fde06b;
  color: var(--titleColor) !important;
  border: 2px solid #000;
  height: 60px;
  width: 60px;
  right: 10px;
  z-index: 999;
  line-height: 60px;
  text-align: center;
  border-radius: 30px;
}

.holiday {
  text-align: left !important;
}
.cur-month {
  width: 53rpx;
  height: 100%;
  align-self: center;
  align-items: center;
  line-height: 25px;
  font-size: 20rpx;
  text-align: center;
  color: #7a7d80;
  background-color: #ffffff11;
}

.week-list {
  display: flex;
  flex-direction: row;
  /* max-width: calc(100vw-53rpx); */
  width: calc(100vw-53rpx);
  height: 100%;
  background-color: #ffffff11;
}

.day-text {
  width: 100rpx;
  height: 100%;
  font-size: 20rpx;
  justify-content: center;
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
}

.day-text-without {
  width: 141rpx;
  text-align: center;
}

.day-text.active {
  background-color: #fde06b66;
}

.day-text text:first-child {
  color: #18191a;
}

.day-text text:last-child {
  color: #7a7d80;
}

.tab-scroll {
  height: calc(100vh - 140px);
  z-index: 10;
  position: fixed;
  border-top: 1rpx solid #cacbcc55;
}

.tab-scroll-folder {
  height: calc(100% - 120px + 150rpx);
}

.tab-container {
  width: 100vw;
  display: flex;
}

.tab-divide {
  background-color: #f6f6f6aa;
  color: #7a7d80;
}

.tab-divide-item {
  width: 53rpx;
  height: 200px;
  font-size: 24rpx;
  justify-content: center;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #cacbcc55;
  border-right: 1rpx solid #cacbcc55;
  background-color: #ffffff11;
  box-sizing: border-box;
}

.tab-divide-item text {
  width: 24rpx;
  line-height: 1.5;
}

.tab-section {
  background-color: #ffffff11;
  border-right: 1rpx solid #cacbcc55;
  color: #18191a;
}

.tab-section-divide {
  width: 53rpx;
  height: 200px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #cacbcc30;
  box-sizing: border-box;
}

.tab-section-item {
  width: 53rpx;
  height: 55px;
  font-size: 18rpx;
  justify-content: center;
  display: flex;
  align-items: center;
  text-align: center;
  /* background-color: #ffffff11; */
}

.tab-line {
  position: absolute;
  width: 100%;
  height: 0px;
  border-top: 1rpx dotted #cacbcc33;
  background-color: #ffffff11;
  margin-top: 0px;
}

.course-item {
  position: absolute;
  width: 99rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.course-item-without {
  width: 160rpx;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
}
.course-item-notself {
  border: 1px dashed #00000055;
  font-weight: normal;
}

.countdown-collapse {
  display: block;
}
.countdown-collapse-item {
  font-size: 10px;
  color: lightgrey;
}
.countdown-collapse-content {
  font-size: 10px;
  color: lightgrey;
}
.course-item-inner {
  width: 100rpx;
  border-radius: 5px;
  font-size: 24rpx;
  color: #fff;
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  text-overflow: ellipsis;
}
.course-item-inner text {
  padding-top: 5px;
}

.course-item-inner-without {
  width: 132rpx;
  border-radius: 5px;
  font-size: 24rpx;
  color: #fff;
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  text-overflow: ellipsis;
}

.course-item-inner text {
  text-align: center;
  align-self: center;
  font-size: 10px;
}
.course-item-inner-without text {
  text-align: center;
  align-self: center;
  font-size: 10px;
}

/* .course-item-inner text:not(:last-child) {
  margin-bottom: 6rpx;
} */
.share-popup {
  padding: 5vw;
}

.badge {
  color: #ffffffff;
}

.bg {
  width: 100vw;
  height: 100vh;
  min-width: 100vw;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-position: center;
  background-repeat: no-repeat;
  background-size: 100% auto;
  background-color: #fff;
}

.bg > image {
  height: 100vh;
  width: 100vw;
  opacity: 1;
  position: absolute;
  z-index: -1;
}

.course-detail-popup {
  border-radius: 10px;
  padding: 4vw;
  padding-top: 4vh;
  padding-bottom: 3vh;
  text-align: center;
  height: 100%;
}

.course-detail-popup > .course-info > .popup-title {
  font-size: 20px;
  font-weight: bold;
}
.course-detail-popup > .course-info > .popup-raw {
  font-size: 10px;
}

.course-detail-popup > .course-info > .popup-info {
  font-size: 10px;
}
.course-detail-popup > .course-info > .popup-teacher {
  font-size: 10px;
  opacity: 0.7;
}
.img-turn {
  margin-top: 2vh;
  width: 40px;
  text-align: center;
  opacity: 0.7;
}
.course-free-info {
  font-size: 12px;
  text-align: center;
}
.course-free-text {
  font-size: 12px;
  color: #ffffff88;
}
.course-free-classname {
  font-size: 12px;
  text-align: right;
}

.function-btn-container {
  background-color: #fff;
  border: 1px solid #000;
  border-radius: 50%;
  width: 100%;
  height: 100%;
}

.function {
  padding-top: 4vh;
}

/* 翻转卡片 */

.main {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 300px;
  background-color: #fff;
  height: 300px;
  transform: translate(-50%, -50%);
  perspective: 1500;
  -webkit-perspective: 1500;
  /* 子元素获得透视效果  */
  -moz-perspective: 1500;
}

.box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transition: all 1s;
  backface-visibility: hidden;
  border-radius: 10px;
  cursor: pointer;
}

.b1 {
  background: skyblue;
}
.b2 {
  border-radius: 10px;
  background: #fff;
  transform: rotateY(-180deg);
}

/* 闹钟失败的原因 */
.alarm-detail {
  position: relative;
  width: 80vw;
  /* height: 30vh; */
  padding-top: 2vh;
  padding-bottom: 2vh;
  border-radius: 25rpx;
}
.van-cell-text {
  width: 30vw !important;
  display: inline-block;
}
.countdown-tag {
  min-width: 15vw !important;
  align-content: center !important;
  text-align: center !important;
  display: inline-block !important;
}

.alarm-detail-header {
  border-radius: 25rpx;
  font-weight: bold;
}

.alarm-failure-content {
  padding: 2vh;
}
.alarm-failure-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding-right: 2vh;
  padding-left: 2vh;
