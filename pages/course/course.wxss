/* 天气 */
.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.weatherDetail {
  position: relative;
  width: 65vw;
  height: 50vh;
  background-color: var(--themeColor);
  color: var(--titleColor);
  border-radius: 25rpx;
}
.wrapper .weatherDetail image {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
  border-radius: 25rpx;
}
.weather-header {
  width: 86%;
  position: relative;
  top: 2vh;
  margin-left: 7%;
  margin-right: 4%;
  display: block;
}
.weather-header .location {
  color: black;
  position: absolute;
  display: inline;
  left: 0;
}
.weather-header .time {
  color: #000;
  position: absolute;
  display: inline;
  font-size: 12px;
  right: 0;
}
.weather-content {
  width: 100%;
  text-align: center;
  position: absolute;
  display: block;
  height: 25vh;
  margin: 0 auto;
  top: 5vh;
}

.weather-content .info image {
  text-align: center;
  display: block;
  height: 80px;
  width: 80px;
  position: relative;
  text-align: center;
  margin: 0 auto;
  margin-bottom: 0rpx;
  z-index: 999;
}
.weather-content .weather-info {
  font-size: 20px;
  /* text-shadow: 5px 5px 8px #fed467; */
}
.weather-content .temperature {
  margin-top: 15rpx;
  font-size: 20px;
  font-weight: bold;
}

.weather-content .temperature:last-child {
  margin-top: 5rpx;
}

.weather-content .temperature .temp-intro {
  display: inline;
  font-size: 14px;
  font-weight: normal;
}
.weather-content .rain {
  margin-top: 20rpx;
  font-size: 16px;
}

.weather-lukcy,
.weather-suggest {
  display: block;
  /* text-shadow: 5px 5px 8px #fed467; */
  padding-top: 45rpx;
  color: var(--titleColor);
  font-size: 16px;
  bottom: 0;
  font-weight: bold;
  line-height: 2vh;
}

.weather-foot {
  padding-top: 1vh;
  font-size: 16px;
  text-align: center;
  position: absolute;
  width: 100%;
  bottom: 8vh;
}
