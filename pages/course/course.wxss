.container{
  position: fixed;
  top: 0;
  width: 110vw;
}
.top{
  width: 130vw;
  display: flex;
  flex-direction: row;
  margin-left: 35rpx;
  background-color: white;
  color: #000;
}
.top-text{
  width: 140rpx;
  height: 55rpx;
  padding-left: 10rpx;
  font-size: 9pt;
  justify-content: center;
  text-align: center;
  display: flex;
  align-items: center;
}
.left{
  width: 35rpx;
  height: 100rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  align-items: center;
  
}
.flex-item {
  width: 140rpx;
  height: 100rpx;
}


.kcb-item {
  align-items: center;
  align-content: center;
  align-self: center;
  justify-content: center;
  vertical-align: middle;
  display: flex; 
  flex-direction: column;
  text-align: center;
  position: absolute;
  border-radius: 16rpx; 
  border: 2px solid black;
  background-color: transparent;
  padding: 1px;
}


.smalltext {
  display: block;
  font-size: 8pt;
  color: #000;  
}
.scroll {
  height: 100vh;
  z-index: 101;
  position: fixed;
}
.box1 .dateBox{
  width: 100%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  margin-top: 20px;
  font-size: 40rpx;
}

.box1{
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
}

.box1>view{
  height: 30px;
  line-height: 30px;
  text-align: center;
  font-size: 34rpx;
}

.dateOn{
  border-radius: 50%;
  background-color: hotpink;
  color: #fff;
  
}
.ball {
  box-shadow:2px 2px 2px lightgray;
}
.font-color{
  color:#a9a9a9;
}
