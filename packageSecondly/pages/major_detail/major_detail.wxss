/* packageSecondly/pages/major_detail/major_detail.wxss */

.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  font-size: 18rpx;
  border-bottom: 1rpx solid rgb(232 228 228);
}

.course-detail-popup {
  border-radius: 10px;
  padding: 4vw;
  padding-top: 4vh;
  padding-bottom: 3vh;
  text-align: center;
  height: 100%;
}

.function-btn-container {
  background-color: #fff;
  border: 1px solid #000;
  border-radius: 50%;
  width: 100%;
  height: 100%;
}

.function {
  padding-top: 4vh;
}

.course-detail-popup > .course-info > .popup-title {
  font-size: 20px;
  font-weight: bold;
}
.course-detail-popup > .course-info > .popup-raw {
  font-size: 10px;
}

.course-detail-popup > .course-info > .popup-info {
  font-size: 10px;
}
.course-detail-popup > .course-info > .popup-teacher {
  font-size: 10px;
  opacity: 0.7;
}
.td {
  white-space: pre-line;
  width: 40%;
  justify-content: center;
  text-align: center;
  padding: 10rpx;
}
.dropdown-title {
  font-size: 22rpx !important;
}
.bg-w {
  font-weight: bold;
  background: #fee161;
}
.bg-g {
  background: #e6f3f9;
}
.th {
  width: 40%;
  justify-content: center;
  color: #000;
  display: flex;
  align-items: center;
  font-weight: bold;
}
