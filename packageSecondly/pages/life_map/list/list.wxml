<view class="container" style="{{ themeData.myStyle }}">
  <map polyline="{{showRouter?polyline:''}}" bindregionchange="regionchange" style="z-index:-1" id="map" min-scale="5"
    max-scale="19" enable-rotate enable-zoom subkey="5WCBZ-U7RLU-RFHVG-2N6Q7-76LT6-DZBJO" layer-style="{{theme}}"
    scale="{{scale}}" longitude="{{longitude}}" latitude="{{latitude}}" include-points="{{includePoints}}"
    markers="{{markers}}">
    <view class="center-position">
      <iconfont name="huodong1" class="map-center-image"></iconfont>
      <!-- <image class="map-center-image" src=""></image> -->
    </view>
  </map>
  <view class="user-position" style="opacity:{{showRouter?'1': '0.7'}};bottom:{{showRouter?'240rpx':'790rpx'}}">
    <iconfont name="dingwei" size="30"></iconfont>
  </view>

  <view bindtap="formSubmit" class="router"
    style="opacity:{{showRouter?'1': '0.7'}};bottom:{{showRouter?'130rpx': '680rpx'}};background-color:{{showRouter?'#fde06b':'#ffffffd1'}}">
    <iconfont name="licai" size="30"></iconfont>
  </view>
  <!-- 搜索框 -->

  <!-- <view class="search">
    <van-search value="{{ value }}" placeholder="请输入搜索关键词" use-action-slot background="transparent">
       <view slot="action" bind:tap="onClick">搜索</view> 
    </van-search>
  </view> -->
  <view class="bottom" style="bottom:{{showRouter?'-298px':'0'}}">
    <swiper class="card-swiper round-dot {{globalDetailMode?'detail-mode':''}}" indicator-dots="true" circular="true"
      autoplay="{{false}}" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#000"
      style="height:{{globalDetailMode?'1300rpx!important':'680rpx!important'}}">
      <swiper-item wx:for="{{swiperList}}" wx:key="index" class="{{cardCur==index?'cur':'not_cur'}}"
        bindtouchstart="touchStart" bindtouchmove="touchMove" bindtouchend="touchEnd" data-id="{{item.id}}">
        <view class="swiper-item" data-id="{{item.id}}">
          <view class="distance" catchtap="showdialog2" wx:if="{{!item.isAd}}">1.4km
          </view>
          <view class="ad" wx:else>
            <iconfont name="guanggao" />
          </view>
          <view wx:if="{{!item.isAd}}" catchtap="onTaploveStoreBtn"
            style="background-color:{{item.isLike?'#fde06b':'#ffffffd1'}}" data-id="{{item.id}}" class="love-btn">
            <iconfont name="xihuan" wx:if="{{!item.isLike}}" />
            <iconfont name="xihuan" wx:else />
          </view>
          <view class="img {{item.detailMode?'img-detail-mode':''}}" data-src="{{item.url}}" catchtap="previewImages"
            style="height:{{globalDetailMode?'35%':'67%'}}">
            <image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
          </view>
          <view class="good-list" wx:if="{{item.detailMode}}">
            <view class="title">
              <view class="title_name">
                <iconfont name="fenlei1" class="iconfont" size="12"></iconfont>
                商品列表
              </view>
              <view class="see_all" bindtap="showStoreListPop">
                <!-- <iconfont size="12" name="liebiao"></iconfont> -->
                <van-icon name="arrow" />
              </view>
            </view>
            <view class="good-list-detail">
              <van-tabs active="{{ active }}" tab-class="tab-class" tab-active-class="tab-active text-black"
                color="#FFE9A7" line-height="4" title-inactive-color="#aaa" animated>
                <van-tab title="美容">
                  <van-cell-group>
                    <van-cell icon="smile-o" title-class="cell-title" title-width="70%" title="超声波除毛" value="￥199" />
                    <van-cell icon="smile-o" title-class="cell-title" title-width="70%"
                      title="王者之心（全模式）-进口激光美白除皱收缩毛孔M22光子嫩肤" value="￥999" />
                  </van-cell-group>
                </van-tab>
                <van-tab title="标签 2">内容 2</van-tab>
                <van-tab title="标签 3">内容 3</van-tab>
                <van-tab title="标签 4">内容 4</van-tab>
              </van-tabs>
            </view>
          </view>

          <view class="info">
            <view class="store-name" style="font-size:{{item.detailMode? '45':'32'}}rpx">{{item.storeName}}</view>
            <view class="telephone" wx:if="{{item.detailMode}}" catchtap="tel" data-number="17685837371">
              <view class="title">
                <view class="title_name">
                  <iconfont name="tonghua" class="iconfont" size="12"></iconfont>
                  17685837371
                </view>
              </view>
            </view>
            <view class="location" catchtap="toMapApp">
              <view class="title">
                <view class="title_name">
                  <iconfont name="daohang" class="iconfont" size="12"></iconfont>
                  浮山校区电动门旁边
                </view>
              </view>
            </view>

            <view class="rate" catchtap="onToggleRatePop" style="width: 50%;">
              <van-rate size="{{ 16 }}" value="3" color="#FDE06B" readonly />
            </view>

            <view class="comments" catchtap="onShowCommentPop" style="bottom:10px">
              <iconfont name="pinglun" size="30" />
            </view>
          </view>
        </view>
      </swiper-item>
    </swiper>
  </view>
</view>

<!-- 评分框 -->
<van-popup show="{{ showRatePopValue }}" round position="bottom" closeable bind:close="onToggleRatePop"
  custom-style="width:100%;height: 40%;">
  <view class="cu-bar bg-white">
    <view class="action sub-title">
      <text class="text-lg text-bold text-black">{{swiperList[cardCur].storeName}}</text>
      <text class="bg-yellow"></text>
    </view>
  </view>

  <view style="text-align:center;color:grey;font-size:28rpx">平均评分<text
      style="font-size:80rpx;font-weight: bold;color:black;padding-left:10px;padding-right:10px">3.8</text> ( 44人 )
  </view>

  <view style="margin: 30rpx auto;text-align:center">
    <view class="rate">
      <van-rate size="{{ 38 }}" value="{{yourRate}}" bind:change="onChangeRateValue" color="#FDE06B" />
    </view>
  </view>
  <view style="margin: 40rpx auto;width:50vw">
    <van-button custom-style="transition:.2s;border:2px solid {{yourRate==0?'#C8C9D3':'#000'}};height:60rpx" block
      color="{{yourRate==0?'#C8C9D3':'#000'}}" plain round bindtap="submitRate">
      提交
    </van-button>
  </view>
</van-popup>

