/* packageSecondly/pages/major_list/major_list.wxss */

.cu-item,
#helpView {
  box-sizing: border-box;
}

.text-cut {
  font-size: 24rpx;
}
.cu-list.menu-avatar > .cu-item .content {
  font-size: 24rpx;
  width: 77%;
}

.cu-list.menu-avatar > .cu-item .action .cu-tag {
  display: block;
  font-size: 24rpx;
}

.VerticalNav.nav {
  width: 451rpx;
  white-space: initial;
}

.VerticalNav.nav .cu-item {
  width: 100%;
  text-align: center;
  background-color: #fff;
  margin: 0;
  border: none;
  height: 50px;
  position: relative;
  font-size: 20rpx;
  color: #081f40;
}

.VerticalNav.nav .cu-item.cur {
  background-color: #f1f1f1;
}

.VerticalNav.nav .cu-item.cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: currentColor;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}

.VerticalBox {
  display: flex;
  height: calc(100vh-54rpx);
}

.VerticalMain {
  background-color: #f1f1f157;
}

.cu-bar {
  border-radius: 10px 10px 0 0;
}

.cu-list.menu-avatar {
  border-radius: 0 0 10px 10px;
}

