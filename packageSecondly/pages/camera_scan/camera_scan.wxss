page {
  position: fixed;
}
.firstmask {
  width: 100%;
  height: 18vh;
  background-color: rgba(0, 0, 0, 0.7);
}
.centerline {
  width: 100%;
  height: 40vh;
  display: flex;
}
.one {
  width: 20%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
}
.title {
  position: fixed;
  top: 10vh;
  left: 50%;
  padding: 5rpx 10rpx;
  transform: translate(-50%, -50%);
  width: 380rpx;
  height: 60rpx;
  background: #000000;
  border-radius: 30rpx;
  color: white;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  display: flex;
  justify-content: center;
  align-items: center;
}
.two {
  width: 20%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
}
.center {
  width: 100%;
  height: 100%;
  overflow: hidden;
  margin: 0 auto;
  background-color: transparent;
  position: relative;
}
.borderitem1 {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0;
  left: 0;
  border-left: 5rpx solid #1a6eff;
  border-top: 5rpx solid #1a6eff;
}
.borderitem2 {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0;
  right: 0;
  border-right: 5rpx solid #1a6eff;
  border-top: 5rpx solid #1a6eff;
}
.borderitem3 {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  border-left: 5rpx solid #1a6eff;
  border-bottom: 5rpx solid #1a6eff;
}
.borderitem4 {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  border-right: 5rpx solid #1a6eff;
  border-bottom: 5rpx solid #1a6eff;
}
.lastmask {
  width: 100%;
  height: 52vh;
  background-color: rgba(0, 0, 0, 0.7);
}
.bottomBtn {
  width: 100%;
  z-index: 1000;
  display: flex;
  height: 250rpx;
  background-color: #000000;
  position: fixed;
  bottom: 0;
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #ffffff;
}
.neicontent {
  width: 70%;
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
}
.itemimg {
  width: 88rpx;
  height: 88rpx;
  margin-bottom: 20rpx;
}
.bottomBtn .left {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.bottomBtn .right {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.image_block image {
  transform: rotate(180deg);
}

.scan-animation {
  opacity: 0.3;
  position: absolute;
  top: 10rpx;
  left: 5%;
  width: 485rpx;
  animation: move 3s linear infinite;
}

@keyframes move {
  from {
    top: -500rpx;
    opacity: 0.4;
  }
  to {
    top: 500rpx;
    opacity: 0;
  }
}
